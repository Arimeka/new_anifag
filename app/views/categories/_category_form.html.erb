<div class="row">
  <div class="span6 offset3">
    <%= form_for(@category) do |f| %>

      <%= f.label :name, "URL" %>
      <%= f.text_field :name %>

      <%= f.label :title, "Название" %>
      <%= f.text_field :title %>
      
      <%= f.label :description, "Описание" %>
      <%= f.text_area :description %>     
      
      <% if controller.action_name == 'edit' %>
        <%= f.submit "Обновить", class: "btn btn-large btn-primary" %>
        <%= f.submit "Удалить", class: "btn btn-large btn-danger", method: :delete,
                                data: { confirm: "Уверены?" } %>
      <% else %>
        <%= f.submit "Создать", class: "btn btn-large btn-primary" %>
      <% end %>
    <% end %>
  </div>
</div>