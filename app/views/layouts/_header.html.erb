<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "⑨ Anime Fag", root_path, :class => "brand" %>
      <ul class="nav">      	
  			<li><%= link_to "Главная", root_path %></li>
  			<% if user_signed_in? %>
  			 <li><%= link_to "Форумы", forums_path %></li>
  			<% end %>               
		  </ul>		  		  
		  	<ul class="nav pull-right">
		  		<% if user_signed_in? %>	  		  		  		
		  			<li>		  			  
		  				<%= link_to image_tag('pencil.png', alt: "Написать пост", title: "Написать пост"), new_article_path %>
		  			</li>
		  			<li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Профиль", current_user %></li>
                <% if current_user.admin?%>
                	<li>
                		<%= link_to "Отправить инвайт", new_user_invitation_path %>
                	</li>
                	<li><%= link_to "Пользователи", users_path %></li>
                	<li><%= link_to "Категории", categories_path %></li>
                	<li><%= link_to "Все топики форумов", topics_path %></li>
                	<li><%= link_to "Все сообщения форумов", topic_posts_path %></li>
                <% end %>                
                <li class="divider"></li>
                <li>
                  <%= link_to "Выйти", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
		  		<% else %>      	
  					<li><%= link_to "Войти", signin_path %></li>
  				<% end %>	            
		  	</ul>
		  <%= form_tag search_path, class: "navbar-search pull-right" do -%>
  			<%= text_field_tag 'search', '', class: "search-query", placeholder: "Поиск" %>
			<% end %>		
    </div>
  </div>
</header>