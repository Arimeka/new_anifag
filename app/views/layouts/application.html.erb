<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
  <%= render 'layouts/seo' %>
  <%= render 'layouts/vkontakte' if controller.controller_name == 'articles' && controller.action_name == 'show' %>
</head>
<body>
	<%= render 'layouts/header' %>
	<div class="container">
		<% flash.each do |key, value| %>
	  	<div class="alert alert-<%= key %>"><%= value %></div>
	  <% end %>
	  <div class="row-fluid">	  	
			<%= yield %>			
		</div>
		
		<%= render 'layouts/footer' %>
		<a href="#" class="scrollup">Вверх</a>
	</div>
  <% if (controller.action_name == 'home' && controller.controller_name == 'static_pages') ||
        (controller.action_name == 'show' && controller.controller_name == 'users') ||
        (controller.action_name == 'show' && controller.controller_name == 'categories')  %>	
	 <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'anifag'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function () {
            var s = document.createElement('script'); s.async = true;
            s.type = 'text/javascript';
            s.src = 'http://' + disqus_shortname + '.disqus.com/count.js';
            (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
        }());
        </script>
   <% end %>
</body>
</html>
